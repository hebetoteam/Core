                                        <tbody id="tbl-content"></tbody>
                                    </table>
                                </div>
                                @await Component.InvokeAsync("Paging")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script id="table-template" type="x-tmpl-mustache">
        <tr>

            <td>{{Name}}</td>
            <td>{{Value}}</td>
            <td>{{Description}}</td>
            <th scope="row">
                <a class="btn btn-sm btn-edit" data-id="{{Id}}"><i class="fa fa-pen-nib text-success"></i></a>
            </th>
        </tr>
    </script>

    @await Html.PartialAsync("_AddEditModal")