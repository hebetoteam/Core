@using Core.Application.ViewModels.Report
@using System.Globalization
@model SavingReportSummaryViewModel
@{
    ViewBag.Title = "Report Saving ";
}
@section Styles{
    <link href="~/admin-app/controllers/report-saving/index.css" rel="stylesheet" />
}

    @section Scripts{

    <script src="~/admin-app/controllers/report-saving/index.js"></script>
    <script>
        var reportController = new ReportController();
        reportController.initialize();
    </script>
}

    <div class="d-flex flex-column flex-column-fluid">

        @await Html.PartialAsync("_ToolbarPartial")

        <div id="kt_app_content" class="app-content flex-column-fluid pt-6 pt-lg-10">
            <div id="kt_app_content_container" class="app-container container-xxl">

                <div class="row g-5 g-xl-10 mb-5 mb-xl-10">

                    <div class="col-md-6 col-lg-6 col-xl-6 col-xxl-4">
                        <div class="card card-flush">
                            <div class="card-header pt-1">
                                <div class="card-title d-flex flex-column">
                                    <div class="d-flex align-items-center">
                                        <span class="fs-1 fw-bold text-dark me-2 lh-1 ls-n2 lblTotalValueLocked">@(Model.TotalSavingAmount.ToString("0.00", CultureInfo.InvariantCulture)) </span>
                                    <span class="fs-3 fw-semibold text-gray-400 me-1 align-self-start">USD</span>
                                    </div>
                                    <span class="text-gray-600 pt-1 fw-bolder fs-5">
                                        Total Saving
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-6 col-xl-6 col-xxl-4">
                        <div class="card card-flush">
                            <div class="card-header pt-1">
                                <div class="card-title d-flex flex-column">
                                    <div class="d-flex align-items-center">
                                    <span class="fs-1 fw-bold text-dark me-2 lh-1 ls-n2 lblPerTotalSaving">@(Model.TotalSavingProfit.ToString("0.00", CultureInfo.InvariantCulture))</span>
                                        <span class="fs-3 fw-semibold text-gray-400 me-1 align-self-start">USD</span>
                                    </div>
                                    <span class="text-gray-600 pt-1 fw-bolder fs-5">Total Saving Profit</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    
                </div>

              


            <div class="row gx-5 gx-xl-10">
                <div class="col-xl-12 mb-5 mb-xl-10">
                    <ul class="nav nav-tabs nav-line-tabs nav-line-tabs-2x mb-5 fs-6">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#kt_tab_pane_4">DIRECT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#kt_tab_pane_5">COMMISION</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#kt_tab_pane_6">LEADERSHIP</a>
                        </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="kt_tab_pane_4" role="tabpanel">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                                        <thead>
                                        <tr class="fw-bolder text-muted">
                                            <th>Email</th>
                                            <th>Token Code</th>
                                            <th>Amount</th>
                                            <th>USD</th>
                                            <th>Direct</th>
                                            <th>Create Date</th>
                                        </tr>
                                        </thead>
                                        <tbody id="tbl-1-content"></tbody>
                                    </table>

                                    @await Component.InvokeAsync("AjaxPagingCommission")
                            </div>
                        </div>
                        </div>
                            <div class="tab-pane fade" id="kt_tab_pane_5" role="tabpanel">
                                
                                <div class="card-body">
                                <div class="mb-5 hover-scroll-x">
                                    <div class="d-grid">
                                        <ul class="nav nav-tabs flex-nowrap text-nowrap">
                                            <li class="nav-item StakeTablinks3" data-id="0">
                                                <a class="nav-link btn btn-active-light btn-color-gray-600 btn-active-color-primary rounded-bottom-0" data-id="0" data-bs-toggle="tab" href="#kt_tab_pane_1">All</a>
                                            </li>
                                            <li class="nav-item StakeTablinks3" data-id="1">
                                                <a class="nav-link btn btn-active-light btn-color-gray-600 btn-active-color-primary rounded-bottom-0" data-id="1" data-bs-toggle="tab" href="#kt_tab_pane_1">F1</a>
                                            </li>
                                            <li class="nav-item StakeTablinks3" data-id="2">
                                                <a class="nav-link btn btn-active-light btn-color-gray-600 btn-active-color-primary rounded-bottom-0" data-id="2" data-bs-toggle="tab" href="#kt_tab_pane_1">F2</a>
                                            </li>
                                            <li class="nav-item StakeTablinks3" data-id="3">
                                                <a class="nav-link btn btn-active-light btn-color-gray-600 btn-active-color-primary rounded-bottom-0" data-id="3" data-bs-toggle="tab" href="#kt_tab_pane_1">F3</a>
                                            </li>
                                            <li class="nav-item StakeTablinks3" data-id="4">
                                                <a class="nav-link btn btn-active-light btn-color-gray-600 btn-active-color-primary rounded-bottom-0" data-id="4" data-bs-toggle="tab" href="#kt_tab_pane_1">F4</a>
                                            </li>
                                            <li class="nav-item StakeTablinks3" data-id="5">
                                                <a class="nav-link btn btn-active-light btn-color-gray-600 btn-active-color-primary rounded-bottom-0" data-id="5" data-bs-toggle="tab" href="#kt_tab_pane_1">F5</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                    

                                    <div class="table-responsive">
                                        <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                                        <thead>
                                            <tr class="fw-bolder text-muted">
                                                <th>Email</th>
                                                <th >Rate</th>
                                                <th>Amount</th>
                                                <th>Create Date</th>
                                            </tr>
                                            </thead>
                                            <tbody id="tbl-2-content"></tbody>
                                        </table>

                                        @await Component.InvokeAsync("AjaxPaging")
                                    </div>
                                    </div>
                                
                        </div>
                        <div class="tab-pane fade" id="kt_tab_pane_6" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                                    <thead>
                                    <tr class="fw-bolder text-muted">
                                        <th>Email</th>
                                        <th>Saving</th>
                                        <th>Saving Affiliate</th>
                                        <th>Total</th>
                                    </tr>
                                    </thead>
                                    <tbody id="tbl-3-content"></tbody>
                                </table>

                                @await Component.InvokeAsync("AjaxPagingLeaderSale")
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>





<script id="table-1-template" type="x-tmpl-mustache">
    <tr class="{{bgName}}">
        <td><span class="fw-bold text-dark d-block fs-7">{{Email}}</span></td>
        <td><span class="fw-bold text-dark d-block fs-7">{{TokenCode}}</span></td>
        <td><span class="fw-bold text-dark d-block fs-7">{{SavingAmount}}</span></td>
        <td><span class="fw-bold text-dark d-block fs-7">{{SavingAmountUSD}}</span></td>
        <td><span class="fw-bold text-dark d-block fs-7">{{ProfitAmount}}</span></td>
        <td><span class="fw-bold text-dark d-block fs-7">{{CreatedOn}}</span></td>

    </tr>
</script>

<script id="table-2-template" type="x-tmpl-mustache">
    <tr class="{{bgName}}">
        <td>{{Email}}</td>
        <td>{{Rate}}%</td>
        <td>{{Amount}}</td>
        <td>{{CreatedOn}}</td>
    </tr>
</script>

<script id="table-3-template" type="x-tmpl-mustache">
    <tr class="{{bgName}}">
        <td><a href="javascript:void(0)" class="l_detail" data-id="{{Id}}">{{Email}}</a></td>
        <td>{{Saving}}</td>
        <td>{{SavingAffiliatet}}</td>
        <td>{{Total}}</td>
