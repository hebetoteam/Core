                                {
                                    <span class="badge badge-light-danger me-auto">NO</span>
                                }
                            </div>

                        </div>
                        <div class="row mb-10">
                            <label class="col-lg-2 fw-bold text-muted">Affiliate F7</label>
                            <div class="col-lg-2">
                                @if (Model.ReferralLevel >= 7)
                                {
                                    <span class="badge badge-light-success me-auto">YES</span>
                                }
                                else
                                {
                                    <span class="badge badge-light-danger me-auto">NO</span>
                                }
                            </div>
                            <label class="col-lg-2 fw-bold text-muted">Affiliate F8</label>
                            <div class="col-lg-2">
                                @if (Model.ReferralLevel >= 8)
                                {
                                    <span class="badge badge-light-success me-auto">YES</span>
                                }
                                else
                                {
                                    <span class="badge badge-light-danger me-auto">NO</span>
                                }
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
